<?xml version="1.0"?>
<phpunit bootstrap="./bootstrap.php">
    <testsuite name="Aphera Test Suite">
        <directory>./Aphera/</directory>
    </testsuite>

    <groups>
        <exclude>
            <group>disable</group>
        </exclude>
    </groups>

    <filter>
        <whitelist>
            <directory suffix=".php">../library</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html"
             target="../build/coverage"
             title="vxml"
             charset="UTF-8"
             yui="true"
             highlight="true"
             lowUpperBound="35"
             highLowerBound="70"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
        <log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
